<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User Profile<span class="pull-right"><a href="/" class="btn btn-primary">Continue Shopping</a></span></h1>
         <hr style="height:1px;border:none;color:#333;background-color:#333;" />
        <h2>My Orders</h2>
        {{#if orders}}
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">Price: ${{ this.price }}</span>
                               <strong>Title:</strong>  {{ this.item.title }} | <strong>Quantity:</strong> {{ this.qty }}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
        {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3> You have no recent orders.</h3>
                    <br>
                </div>
            </div>
        {{/if}}
    </div>
</div>